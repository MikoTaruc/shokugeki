<%= stylesheet_link_tag 'cookbook', media: 'all', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'manifest_cookbook', 'data-turbolinks-track' => true %>

<div id="main"></div>

<script type="text/template" id="layout-recipe-template">
  <div id="content"></div>
  <div id="modals"></div>
</script>

<script type="text/template" id="recipe-list-template">
  <div class="row">
    <div class="cookbook-label col-xs-12">
      <h3><%= current_user.name %>s Cookbook</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-2"id="search-recipe">
      <form class="search-form" role="search">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search" name="search-term" id="search-term">
          <div class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
          </div>
        </div>
      </form>
    </div>
    <div class="col-xs-2">
      <button class="btn btn-success" id="add-recipe">Add Recipe</button>
    </div>
  </div>

  <div class="row" id="all-recipes"></div>
</script>

<script type="text/template" id="recipe-item-template">
  <div class="recipe">
    <span>{{- name }}</span>
    <ul>
      <li>{{- directions }}</li>
      <li>{{- ingredients }}</li>
    </ul>
  </div>
</script>

<script type="text/template" id="recipe-add-modal">
  <div id="add-modal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Modal title</h4>
        </div>
        <div class="modal-body">
          <h5>Recipe Name</h5>
          <input type="text" id="recipe-name">
          <h5>Ingredients</h5>
          <textarea rows="3" id="ingredients"></textarea>
          <h5>Directions</h5>
          <textarea rows="5" id="directions"></textarea>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button id="save" type="button" class="btn btn-primary" data-dismiss="modal">Add Recipe</button>
        </div>
      </div>
    </div>
  </div>
</script>
